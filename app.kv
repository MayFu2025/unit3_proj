<PurchaseDialog>:
        orientation: 'vertical'
        size_hint_y: None
        height: "150dp"
        spacing: 20

        MDLabel:
                id: cost_amount

        MDTextField:
                id: amount
                hint_text: "Enter number between 0~100"
                input_filter: 'int'
                on_text:
                        self.text = str(max(0, min(100, int(self.text or 0))))
                        root.update_amount_text()
        MDLabel:
                id: total_cost
                text: "Total cost: $0"



