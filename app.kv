<PurchaseDialog>:
        orientation: 'vertical'
        size_hint_y: None
        height: "100dp"
        spacing: 20
        MDTextField:
                id: amount
                hint_text: "Enter number between 0~100"
                input_filter: 'int'
                on_text: root.update_amount_text()
        MDLabel:
                id: total_cost
                text: "Total cost: $0"



